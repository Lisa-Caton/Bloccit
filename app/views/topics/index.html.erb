<h1>Topics</h1>
 
 <div class="row">
   <div class="col-md-8">

     <% @topics.each do |topic| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">

             <%= link_to topic.name, topic %>
             <!--/ we create a link to the show view for each topic -->

           </h4>
           <small>
             <%= topic.description %>
           </small>
         </div>
       </div>
     <% end %>
    </div>
    <div class="col-md-4">
      <% if user_is_authorized_for_topics? %>
        <div class="col-md-4">
          <% if user_is_authorized_for_topics? && current_user.admin? %>
            <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
          <% end %>
        </div>
      <% end %>
    </div>
 </div>