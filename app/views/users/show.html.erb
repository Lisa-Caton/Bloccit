<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />

      <!-- we call avatar_url to fetch the current user's avatar. -->
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">

          <!-- we use Rails' image_tag method to create an <img>. -->
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>

 <h2>Posts</h2>
<% if @user.has_posts? %>
  <%= render @user.posts %>
  <!-- We display all of the users post's using partial -->
<% else %>
  <div class="media">
    <%= link_to current_user.name, user_path(current_user) %> has not submitted any posts yet.
  </div>
<% end %>

<h2>Comments</h2>
<% if @user.has_comments? %>
  <%= render @user.comments %>
  <!-- We display all of the users comment's using partial -->
<% else %>
  <div class="media">
    <%= link_to current_user.name, user_path(current_user) %> has not submitted any comments yet.
  </div>
<% end %>

<h2>Favorites</h2>
<% if @user.has_favorites? %>
<!-- We display all of the users favorite's using partial -->
    <% @user.favorites.each do |favorite| %>
      <%= render partial: 'users/favorite', locals: { post: favorite.post } %>
    <% end %>
<% else %>
    <div class="media">
      <%= link_to current_user.name, user_path(current_user) %> has not favorited any posts yet.
    </div>
<% end %>
